@{
    ViewBag.Title = "BasicDropDownList";
}

<style>
    #cap {
        width: 242px;
        height: 225px;
        margin: 20px auto;
        background-image: url('@Url.Content("~/Content/img/Products/cap.png")');
        background-repeat: no-repeat;
        background-color: transparent;
    }
    .black-cap {
        background-position: 0 0;
    }
    .grey-cap {
        background-position: 0 -225px;
    }
    .orange-cap {
        background-position: 0 -450px;
    }

    .center-dropdownlist {
        width: auto;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
    }
</style>

<div class="wrapper">
    <div class="center-dropdownlist">
        <div id="cap-view" class="demo-section k-content">
            <h4 style="text-align: center; margin-bottom: 3.5rem">Customize your Kendo Cap</h4>
            <div id="cap" class="black-cap"></div>
            <h4>@Html.Label("color", "Cap Color")</h4>
            @(Html.Kendo().DropDownList()
                  .Name("color")
                  .DataTextField("Text")
                  .DataValueField("Value")
                  .Events(e => e.Change("change"))
                  .BindTo(new List<SelectListItem>() {
                      new SelectListItem() {
                          Text = "Black",
                          Value = "1"
                      },
                      new SelectListItem() {
                          Text = "Orange",
                          Value = "2"
                      },
                      new SelectListItem() {
                          Text = "Grey",
                          Value = "3"
                      }
                  })
                  .Value("1")
                  .HtmlAttributes(new { style = "width: 100%" })
        )

            <h4 style="margin-top: 2em;">@Html.Label("size", "Cap Size")</h4>
            @(Html.Kendo().DropDownList()
          .Name("size")
          .BindTo(new List<string>() {
              "S - 6 3/4\"",
              "M - 7 1/4\"",
              "L - 7 1/8\"",
              "XL - 7 5/8\""
          })
         .HtmlAttributes(new { style = "width: 100%" })
        )

            <button class="k-button k-primary" id="get" style="margin-top: 2em; float: right;">Customize</button>
        </div>
    </div>
</div>


<script>
    function change() {
        var value = $("#color").val();
        $("#cap")
            .toggleClass("black-cap", value == 1)
            .toggleClass("orange-cap", value == 2)
            .toggleClass("grey-cap", value == 3);
    };

    $(document).ready(function () {
        $("#get").click(function () {
            var color = $("#color").data("kendoDropDownList"),
                size = $("#size").data("kendoDropDownList");

            alert('Thank you! Your Choice is:\n\nColor: ' + color.text() + ' and Size: ' + size.value());
        });
    });
</script>
