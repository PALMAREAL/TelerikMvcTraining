<div class="row mb-3">
    <div class="col-md mt-3 mb-3">
        <div class="k-card">
            <div class="k-card-header" style="color:blueviolet">
                @Html.Raw(File.ReadAllText(Server.MapPath("~/Content/img/Components/grid.svg")))  Grid
            </div>

            <div class="k-card-body">
                <p>
                    The Grid allows users to browser, edit, filter, group, sort, select, and export tabular data.
                </p>
            </div>
            <div class="k-card-actions">
                <span class="k-button k-flat k-primary">@Html.ActionLink("Basic", "BasicGrid", "Grid")</span>
